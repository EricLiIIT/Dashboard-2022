<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:theme="@style/Theme.Dashboard2022">

    <com.iit.dashboard2022.ui.widget.StartLight
        android:id="@+id/dashStartLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.iit.dashboard2022.ui.widget.StartLight>

    <TextView
        android:id="@+id/speedometer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textSize="200sp"
        app:layout_constraintBottom_toTopOf="@+id/indicators"
        app:layout_constraintEnd_toEndOf="@+id/GaugeLayout"
        app:layout_constraintStart_toStartOf="@+id/GaugeLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <com.iit.dashboard2022.ui.widget.Indicators
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/GaugeLayout"
        app:layout_constraintStart_toStartOf="@+id/GaugeLayout"
        app:layout_constraintTop_toTopOf="@+id/GaugeLayout" />

    <LinearLayout
        android:id="@+id/GaugeLayout"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <com.iit.dashboard2022.ui.widget.gauge.SpeedGauge
            android:id="@+id/speedGaugeLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundText"
            android:scaleX="-1"
            app:colorHigh="@color/red"
            app:colorLow="@color/green"
            app:colorMid="@color/yellow" />

        <TextView
            android:id="@+id/unitText"
            style="@style/SideLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="0"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/mph"
            android:textAlignment="center" />

        <com.iit.dashboard2022.ui.widget.gauge.SpeedGauge
            android:id="@+id/speedGaugeRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundText"
            app:colorHigh="@color/red"
            app:colorLow="@color/green"
            app:colorMid="@color/yellow" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>