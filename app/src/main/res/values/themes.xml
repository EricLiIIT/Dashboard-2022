<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dashboard2022" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colors -->
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/foregroundText</item>
        <item name="android:textColorSecondary">@color/backgroundText</item>
        <item name="android:hint">@color/backgroundText</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Custom Attributes -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:minEms">0</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>