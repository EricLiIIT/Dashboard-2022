<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dashboard2022" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/foregroundText</item>
        <item name="android:textColorSecondary">@color/backgroundText</item>
        <item name="android:hint">@color/backgroundText</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Custom Attributes -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>